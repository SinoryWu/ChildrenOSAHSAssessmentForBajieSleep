<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="95dp" android:height="30dp" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="40dp" android:topRightRadius="40dp" android:bottomLeftRadius="40dp" android:bottomRightRadius="40dp" />
            <stroke
                android:width="1dp"
                android:color="#2051BD"
               />
            <solid android:color="#ffffff"/>
        </shape>
    </item>

    <item android:width="95dp" android:height="30dp" android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="40dp" android:topRightRadius="40dp" android:bottomLeftRadius="40dp" android:bottomRightRadius="40dp" />
            <stroke
                android:width="1dp"
                android:color="#2051BD"
                />
            <solid android:color="#eeeeee"/>
        </shape>
    </item>
</selector>