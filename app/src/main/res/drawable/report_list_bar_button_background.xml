<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="95dp" android:height="30dp" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <stroke android:width="1dp" android:color="#2051BD"/>
            <corners android:topLeftRadius="40dp" android:topRightRadius="40dp" android:bottomLeftRadius="40dp" android:bottomRightRadius="40dp" />
        </shape>
    </item>

    <item android:width="95dp" android:height="30dp" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#F7F7F7" />
            <corners android:topLeftRadius="40dp" android:topRightRadius="40dp" android:bottomLeftRadius="40dp" android:bottomRightRadius="40dp" />
        </shape>
    </item>
</selector>