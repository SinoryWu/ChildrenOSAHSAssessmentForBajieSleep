<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".home.activities.HomeAddUserActivity">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/back"
            android:src="@mipmap/fragment_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="新增用户"
            android:textColor="#96ADDF"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView119"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="490dp"
            android:layout_marginTop="138dp"
            android:text="门诊号："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="258dp"
            android:text="手机号："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView124"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="198dp"
            android:text="姓名："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="318dp"
            android:text="性别："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView110"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="378dp"
            android:text="年龄："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView128"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="438dp"
            android:text="身高（cm）："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="498dp"
            android:text="体重（kg）："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView115"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="558dp"
            android:text="是否随访："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView119"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/mzh"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="614dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/add_user_edit_background"
            android:hint="请输入…"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/add_user_edit_background"
            android:hint="请输入…"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            app:layout_constraintStart_toStartOf="@+id/mzh"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/add_user_edit_background"
            android:hint="请输入…"
            android:maxLength="5"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            app:layout_constraintStart_toStartOf="@+id/mzh"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:layout_marginStart="614dp"
            android:layout_marginTop="310dp"

            android:gravity="center_vertical"

            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/b21"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:background="@drawable/question_true_background"
                android:stateListAnimator="@null"
                android:text="男"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/b22"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:background="@drawable/question_false_background"
                android:stateListAnimator="@null"
                android:text="女"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />


        </LinearLayout>


        <EditText
            android:id="@+id/age"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/add_user_edit_background"
            android:hint="请输入…"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            app:layout_constraintStart_toStartOf="@+id/line2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/height"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/add_user_edit_background"
            android:hint="请输入…"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            app:layout_constraintStart_toStartOf="@+id/line2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="490dp"
            android:background="@drawable/add_user_edit_background"
            android:hint="请输入…"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            app:layout_constraintStart_toStartOf="@+id/line2"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:layout_marginStart="614dp"
            android:layout_marginTop="550dp"

            android:gravity="center_vertical"

            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/b31"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:background="@drawable/question_true_background"
                android:stateListAnimator="@null"
                android:text="是"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/b32"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:background="@drawable/question_false_background"
                android:stateListAnimator="@null"
                android:text="否"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />


        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginEnd="490dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_confirm_background"
            android:stateListAnimator="@null"
            android:text="@string/buttonConfirm"
            android:textColor="#ffffff"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="490dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_cancle_background"
            android:stateListAnimator="@null"
            android:text="@string/buttonCancel"
            android:textColor="#2051BD"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView124"
            app:layout_constraintEnd_toStartOf="@+id/textView124"
            app:layout_constraintTop_toTopOf="@+id/textView124"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView130"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView121"
            app:layout_constraintEnd_toStartOf="@+id/textView121"
            app:layout_constraintTop_toTopOf="@+id/textView121"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView43"
            app:layout_constraintEnd_toStartOf="@+id/textView43"
            app:layout_constraintTop_toTopOf="@+id/textView43"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView126"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView110"
            app:layout_constraintEnd_toStartOf="@+id/textView110"
            app:layout_constraintTop_toTopOf="@+id/textView110"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView129"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView128"
            app:layout_constraintEnd_toStartOf="@+id/textView128"
            app:layout_constraintTop_toTopOf="@+id/textView128"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView127"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView111"
            app:layout_constraintEnd_toStartOf="@+id/textView111"
            app:layout_constraintTop_toTopOf="@+id/textView111"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0076"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView115"
            app:layout_constraintEnd_toStartOf="@+id/textView115"
            app:layout_constraintTop_toTopOf="@+id/textView115"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>