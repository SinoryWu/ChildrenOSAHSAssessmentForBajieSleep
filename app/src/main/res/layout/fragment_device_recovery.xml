<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".device.devicefragment.EditDeviceFragment">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/back"
            android:src="@mipmap/fragment_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="@string/EditDeviceInformation"
            android:textColor="#96ADDF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="150dp"
            android:text="@string/choiceDevice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="150dp"
            android:text="@string/choiceDevice"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="210dp"
            android:text="选中用户"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="332dp"
            android:text="设备完好"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="393dp"
            android:text="睡眠报告"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="271dp"
            android:text="手机号"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="251dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="312dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view12"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="433dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="594dp"
            android:layout_marginTop="150dp"
            tools:text="S01D200700003D"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="591dp"
            android:layout_marginTop="210dp"
            tools:text="闲置"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceChangeStatus"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="@string/change"
            android:textColor="#2051BD"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceStopStatus"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="终止"
            android:visibility="gone"
            android:textColor="#2051BD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceRecoveryStatus"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="回收"
            android:visibility="gone"
            android:textColor="#2051BD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="591dp"
            android:layout_marginTop="271dp"
            tools:text="131212213123"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/reportNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="594dp"
            android:layout_marginTop="393dp"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1份" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/editDeviceConfirm"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginEnd="490dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_confirm_background"
            android:text="@string/buttonConfirm"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/editDeviceCancel"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="490dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_cancle_background"
            android:text="@string/buttonCancel"
            android:textColor="#2051BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/device_damage"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/device_damage_drawable"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

        <ImageView
            android:id="@+id/device_intact"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/device_intact_drawable"
            app:layout_constraintBottom_toBottomOf="@+id/device_damage"
            app:layout_constraintStart_toEndOf="@+id/device_damage"
            app:layout_constraintTop_toTopOf="@+id/device_damage" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="300dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/editDeviceCancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>