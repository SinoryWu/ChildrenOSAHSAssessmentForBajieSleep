<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7 "
    app:cardCornerRadius="5dp"
    app:cardElevation="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_item_treat_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="手术治疗"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#C1C1C1"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@drawable/pop_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"/>

        <TextView
            android:id="@+id/pop_item_treat_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="药物治疗"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#C1C1C1"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@drawable/pop_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"/>
        <TextView
            android:id="@+id/pop_item_treat_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="NPPV治疗 "
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#C1C1C1"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="@drawable/pop_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"/>
        <TextView
            android:id="@+id/pop_item_treat_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="口腔矫治器治"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#C1C1C1"
            android:gravity="center_vertical"
            android:background="@drawable/pop_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"/>
        <TextView
            android:id="@+id/pop_item_treat_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="健康管理治疗"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#C1C1C1"
            android:gravity="center_vertical"
            android:background="@drawable/pop_item_background"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"/>
        <TextView
            android:id="@+id/pop_item_treat_6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="无需治疗"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#C1C1C1"
            android:gravity="center_vertical"
            android:background="@drawable/pop_item_background"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>