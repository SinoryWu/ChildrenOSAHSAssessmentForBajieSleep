<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="15dp">
    <TextView
        android:id="@+id/change_dialog_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="版本更新"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/time_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/change_dialog_title">

        <TextView
            android:id="@+id/current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本：V1.0.0"
            android:textSize="16sp"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/next_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新版本：V1.0.1"
            android:textSize="16sp"
            android:layout_below="@+id/current_version"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/content_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl修复不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl修复：不知道是啥爱仕达盛大的萨德萨达的撒大大的balballalbbablablababl"
            android:layout_below="@+id/next_version"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:ellipsize ="end"
            android:maxEms="70"
            android:maxLines = "3"
            android:paddingEnd="20dp"/>

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/time_picker_layout">

        <TextView
            android:id="@+id/update_version_confirm"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15sp"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>