<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/addTreatmentMotion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layoutDescription="@xml/activity_add_treatment_record_scene"
        tools:context=".user.activities.AddTreatmentRecordActivity">

        <ImageView
            android:id="@+id/addTreatmentBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/back"
            android:src="@mipmap/fragment_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="添加诊疗记录"
            android:textColor="#96ADDF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_treatment_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1016dp"
            android:layout_marginTop="130dp"
            android:text="管理医生：李二花"
            android:textColor="#C1C1C1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="130dp"
            android:text="王小明"
            android:textColor="#C1C1C1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="209dp"
            android:text="OAHI："
            android:textColor="#888888"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView167"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="565dp"
            android:text="附件："
            android:textColor="#888888"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView168"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="299dp"
            android:text="内容："
            android:textColor="#888888"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/oahi"
            android:layout_width="410dp"
            android:layout_height="50dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="195dp"
            android:background="@drawable/add_treatment_edit_background1"
            android:gravity="start"
            android:hint="请输入…"
            android:maxLength="500"
            android:paddingStart="20dp"
            android:paddingTop="14dp"
            android:paddingEnd="20dp"
            android:paddingBottom="14dp"
            android:singleLine="false"
            android:textColorHint="#C1C1C1"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="231dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="285dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/diagnostic_opinion"
                android:layout_width="410dp"
                android:layout_height="231dp"
                android:background="@drawable/add_treatment_edit_background1"
                android:gravity="start"
                android:hint="请输入诊断意见…"
                android:paddingStart="20dp"
                android:paddingTop="14dp"
                android:paddingEnd="20dp"
                android:paddingBottom="14dp"
                android:singleLine="false"
                android:textColor="#262626"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E8E8E8" />

            <EditText
                android:id="@+id/treatment_opinion"
                android:layout_width="410dp"
                android:layout_height="231dp"
                android:background="@drawable/add_treatment_edit_background1"
                android:gravity="start"
                android:hint="请输入治疗意见…"
                android:paddingStart="20dp"
                android:paddingTop="14dp"
                android:paddingEnd="20dp"
                android:paddingBottom="14dp"
                android:singleLine="false"
                android:textColor="#262626"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="195dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/oahi"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/normal"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/treatment_records_normal"
                android:stateListAnimator="@null"
                android:text="正常"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/light"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/treatment_records_light"
                android:stateListAnimator="@null"
                android:text="轻度"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/moderate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/treatment_records_moderate"
                android:stateListAnimator="@null"
                android:text="中度"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/severe"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/treatment_records_severe"
                android:stateListAnimator="@null"
                android:text="重度"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginEnd="490dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_confirm_background"
            android:stateListAnimator="@null"
            android:text="@string/buttonConfirm"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="490dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_cancle_background"
            android:stateListAnimator="@null"
            android:text="@string/buttonCancel"
            android:textColor="#2051BD"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="630dp"
            android:layout_height="70dp"
            android:layout_marginTop="546dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_treatment_picReclerView"
                android:layout_width="wrap_content"
                android:layout_height="70dp"

                android:minWidth="0dp" />

            <RelativeLayout
                android:id="@+id/add_treatment_report_add_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/add_treatment_picReclerView"
                android:background="@drawable/update_report_add_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    app:srcCompat="@mipmap/add_icon" />
            </RelativeLayout>
        </RelativeLayout>


        <View
            android:id="@+id/add_treatment_bottom_view"
            android:layout_width="450dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>