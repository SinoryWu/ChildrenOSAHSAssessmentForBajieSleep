<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent"
        tools:context=".setting.fragment.SettingRegisterFragment">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="130dp"
            tools:text="TextView"
            android:textColor="#2051BD"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="449dp" />

        <TextView
            android:id="@+id/textView216"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="是否允许自主注册："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView218"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="199dp"
            android:text="注册是否需要填写问卷："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView219"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="259dp"
            android:text="注册二维码："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="496dp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:layout_marginTop="130dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/guideline50"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/b11"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:background="@drawable/question_true_background"
                android:stateListAnimator="@null"
                android:text="是"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/b12"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:background="@drawable/question_false_background"
                android:stateListAnimator="@null"
                android:text="否"
                android:textColor="#C1C1C1"
                android:textSize="16sp" />


        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="190dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/guideline50"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/osa"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:button="@drawable/check_drawable"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="OSA-18"
                android:textColor="#262626"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/psq"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="60dp"
                android:button="@drawable/check_drawable"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="PSQ"
                android:textColor="#262626"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/guideline50"
                app:layout_constraintTop_toTopOf="parent" />


        </RadioGroup>

        <ImageView
            android:id="@+id/QR_code"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            app:layout_constraintStart_toStartOf="@+id/guideline50"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/qr_code_icon" />
        <Button
            android:stateListAnimator="@null"
            android:id="@+id/confirm"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginEnd="490dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_confirm_background"
            android:text="@string/buttonConfirm"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/cancel"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="490dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_cancle_background"
            android:text="@string/buttonCancel"
            android:textColor="#2051BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>