<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/record_list_item_back_layout"
    android:layout_width="670dp"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/record_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="2020/12/12"
        android:textColor="#262626"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/record_list_item_content"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="158dp"
        android:gravity="center"
        tools:text="O者。O者。O者。O者。O者。O者。O者。O者。O者。O者。O者。O者。O者。"
        android:textColor="#262626"
        android:textSize="14sp"
        android:ellipsize ="end"
        android:maxEms="70"
        android:maxLines = "3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/record_list_item_detail"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="558dp"
        android:background="@drawable/home_report_list_item_button_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="详情"
            android:textColor="#2051BD"
            android:textSize="14sp" />

        <ImageView

            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_marginStart="13dp"
            app:srcCompat="@mipmap/right_blue_arrow" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>