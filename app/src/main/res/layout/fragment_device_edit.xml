<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".device.devicefragment.EditDeviceFragment">
        <Button
            android:id="@+id/delete_button"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="120dp"
            android:background="@drawable/delete_user_button_background"
            android:stateListAnimator="@null"
            android:text="删除设备"
            android:textColor="#F45C50"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/editDeviceBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/back"
            android:src="@mipmap/fragment_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="@string/EditDeviceInformation"
            android:textColor="#96ADDF"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="150dp"
            android:text="@string/choiceDevice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="150dp"
            android:text="@string/choiceDevice"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="210dp"
            android:text="@string/EquipmentStatus"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="332dp"
            android:text="@string/WorkingMode"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="412dp"
            android:text="@string/EditDeviceInfomationNotice"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="519dp"
            android:layout_marginTop="271dp"
            android:text="@string/MonitoringPeriod"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="251dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="312dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="594dp"
            android:layout_marginTop="150dp"
            android:text="S01D200700003D"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="591dp"
            android:layout_marginTop="210dp"
            tools:text="闲置"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceChangeStatus"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="@string/change"
            android:textColor="#2051BD"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceStopStatus"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="终止"
            android:visibility="gone"
            android:textColor="#2051BD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceRecoveryStatus"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="回收"
            android:visibility="gone"
            android:textColor="#2051BD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceChangeTime"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="732dp"
            android:layout_marginTop="261dp"
            android:gravity="center"
            android:text="@string/change"
            android:textColor="#2051BD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="591dp"
            android:layout_marginTop="271dp"
            android:text="21:00～06:00"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editDeviceMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="591dp"
            android:layout_marginTop="332dp"
            android:text="儿童模式"
            android:textColor="#262626"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/editDeviceConfirm"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginEnd="490dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_confirm_background"
            android:text="@string/buttonConfirm"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/editDeviceCancel"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="490dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_cancle_background"
            android:text="@string/buttonCancel"
            android:textColor="#2051BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>