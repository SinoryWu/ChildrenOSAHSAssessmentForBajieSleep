<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".setting.fragment.SettingPasswordFragment">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="402dp" />

        <TextView
            android:id="@+id/textView201"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp"
            android:text="短信验证码："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/guideline47"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView213"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="232dp"
            android:text="新密码："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/guideline47"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView215"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:text="重复新密码："
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/guideline47"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="534dp" />


        <EditText
            android:id="@+id/setting_message"
            android:layout_width="216dp"
            android:layout_height="53dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/login_message_edit_background"
            android:drawableLeft="@mipmap/login_message_icon"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#E7E4E9"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/guideline48"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/message_button"
            android:layout_width="136dp"
            android:layout_height="54dp"
            android:background="@drawable/login_message_button_background_true"
            android:stateListAnimator="@null"
            android:text="获取验证码"
            android:textColor="#FFFFFF"

            app:layout_constraintBottom_toBottomOf="@+id/setting_message"
            app:layout_constraintStart_toEndOf="@+id/setting_message"
            app:layout_constraintTop_toTopOf="@+id/setting_message" />


        <EditText
            android:id="@+id/new_password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="224dp"
            android:background="@drawable/setting_password_background"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/guideline48"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/repeat_new_password"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="284dp"
            android:background="@drawable/setting_password_background"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:hint="重复新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:textColor="#262626"
            android:textColorHint="#C1C1C1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/guideline48"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:stateListAnimator="@null"
            android:id="@+id/confirm"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginEnd="490dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_confirm_background"
            android:text="@string/buttonConfirm"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/cancel"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="490dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_cancle_background"
            android:text="@string/buttonCancel"
            android:textColor="#2051BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>