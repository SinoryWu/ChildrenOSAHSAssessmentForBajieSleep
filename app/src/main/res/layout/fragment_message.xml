<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="380dp"
        android:layout_height="380dp"
        app:layoutDescription="@xml/fragment_message_xml_constraintlayout4_scene"
        tools:context=".login.fragment.MessageFragment">

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="354dp"
            android:layout_height="53dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/login_edittext_background"
            android:drawableLeft="@mipmap/login_phone_icon"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#E7E4E9"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/login_message"
            android:layout_width="216dp"
            android:layout_height="53dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/login_message_edit_background"
            android:drawableLeft="@mipmap/login_message_icon"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#E7E4E9"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/login_phone"
            app:layout_constraintTop_toBottomOf="@+id/login_phone" />

        <Button
            android:id="@+id/login_message_button"
            android:layout_width="136dp"
            android:layout_height="54dp"
            android:background="@drawable/login_message_button_background_true"
            android:stateListAnimator="@null"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/login_message"
            app:layout_constraintStart_toEndOf="@+id/login_message"
            app:layout_constraintTop_toTopOf="@+id/login_message" />

        <TextView
            android:id="@+id/login_use_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            android:gravity="center_vertical"
            android:text="使用密码登录"
            android:textColor="#596AFD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/login_message"
            app:layout_constraintTop_toBottomOf="@+id/login_phone" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>