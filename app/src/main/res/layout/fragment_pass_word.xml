<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="380dp"
        tools:context=".login.fragment.PassWordFragment">

        <EditText
            android:id="@+id/login_account"
            android:layout_width="354dp"
            android:layout_height="53dp"
            android:layout_marginTop="23dp"
            android:gravity="center_vertical"
            android:hint="账号"
            android:inputType="number"
            android:background="@drawable/login_edittext_background"
            android:drawableLeft="@mipmap/login_account_icon"
            android:paddingStart="20dp"
            android:drawablePadding="11dp"
            android:textSize="17sp"
            android:textColorHint="#E7E4E9"
            android:textColor="#000000"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/login_edittext_background"
            android:drawableLeft="@mipmap/login_password_icon"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="19dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#E7E4E9"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/login_account"
            app:layout_constraintStart_toStartOf="@+id/login_account"
            app:layout_constraintTop_toBottomOf="@+id/login_account" />

        <TextView
            android:id="@+id/login_use_message"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            android:gravity="center_vertical"
            android:text="使用验证码登录"
            android:textColor="#596AFD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/login_account"
            app:layout_constraintTop_toBottomOf="@+id/login_account" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>